spring.application.name=chartmania
spring.thymeleaf.cache=false
# Simplify console logs
logging.pattern.console=%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n%throwable{short}

# Hide noisy frameworks
logging.level.org.springframework.web=ERROR
logging.level.org.thymeleaf=ERROR
logging.level.org.apache.catalina=ERROR

# Optional: show root cause first
logging.exception-conversion-word=%rEx

#Browser error stack trace
server.error.include-message=always
server.error.include-binding-errors=always
server.error.include-stacktrace=always
server.error.include-exception=true

# MariaDB connection
spring.datasource.url=jdbc:mariadb://localhost:3306/chartmania
spring.datasource.username=root
spring.datasource.password=

# ORM / JPA configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MariaDBDialect


#Cookie
secure.cookie=false


#JWT
jwt.secret=your_secret_key
jwt.issuer=chartmania-api
jwt.exp-minutes=15
jwt.refresh.token.exp-minutes=14400


allowed.origin=http://your_origin